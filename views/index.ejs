<%- include("header",{title: "Login" })-%>
<div class="container">
    <h1 class="text-center">
        Login
    </h1>
    <form method="POST">
        <div class="row">
            <div class="col-6 offset-3">
                <div class="mb-3">
                    <label for="usernameID" class="form-label">User</label>
                    <input type="text" class="form-control" id="usernameID" name="username" placeholder="username">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 offset-3">
                <div class="mb-3">
                    <label for="pass" class="form-label">Password</label>
                    <input type="password" class="form-control" id="pass" name="password" placeholder="password">
                </div>
                <% if (typeof error !== "undefined") { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>
            </div>
        </div>
        <div class="row">
            <div class="col-2 offset-3">
                <a href="/forgotpassw">
                    <button type="button" class="btn btn-link btn-sm">Forgotten password?</button>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-2 offset-3">
                <a href="/register">
                    <button type="button" class="btn btn-danger btn-lg">Register</button>
                </a>
            </div>
            <div class="col-1 offset-3 text-end">
                    <input type="submit" class="btn btn-danger btn-lg" value="Login"/>
            </div>
        </div>
    </form>
</div>
<%- include("footer") -%>